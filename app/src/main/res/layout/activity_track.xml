<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.gcell.Track"
    android:background="#dfdfdf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:text="TRACK YOUR"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:text="COMPLAINT HERE!"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Complain Id"
        android:textSize="30dp"
        android:id="@+id/complain"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_complain"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/first"
        android:layout_alignEnd="@+id/first"
        android:layout_alignLeft="@+id/first"
        android:layout_alignStart="@+id/first"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/submit1"
        android:layout_below="@+id/et_complain"
        android:layout_alignRight="@+id/complain"
        android:layout_alignEnd="@+id/complain"
        android:layout_marginTop="86dp"
        android:layout_alignLeft="@+id/complain"
        android:layout_alignStart="@+id/complain"
        android:background="#9599fe"/>

</RelativeLayout>
